include ../includes/head.pug

style(amp-custom='').
    .blue-box, .red-box, .green-box {
      width: 100%;
      height: 320px;
      text-align: center;
      font-size: 30px;
      padding-top: 20%;
    }
    .blue-box {
      background: blue;
      color: #fff;
    }
    .green-box {
      background: green;
      color: #fff;
    }
    .red-box {
      background: red;
      color: #111;
    }
amp-carousel(width="400" height="100" layout="responsive" type="slides" autoplay delay="2000" role="region" aria-label="Carousel with autoplay")
  .blue-box Blue box.
  .red-box Red box.
  .green-box Green box.
